@startuml
left to right direction
skinparam packageStyle rectangle

actor Usuario

package "Autenticación" {
    usecase "Login\n(correo o red social)" as UC_Login
    usecase "Registro" as UC_Registro
    usecase "Recuperación de contraseña" as UC_Recuperacion
    usecase "Logout" as UC_Logout
}

package "Noticias" {
    usecase "Ver noticias" as UC_VerNoticias
    usecase "Ver categorías de noticias" as UC_VerCategorias
    usecase "Ver detalle de noticia" as UC_VerDetalle
    usecase "Ver noticias relacionadas" as UC_VerRelacionadas
}

' Relaciones usuario → casos de uso
Usuario --> UC_Login
Usuario --> UC_Registro
Usuario --> UC_Recuperacion
Usuario --> UC_Logout

Usuario --> UC_VerNoticias
Usuario --> UC_VerCategorias
Usuario --> UC_VerDetalle

' Relación de detalle de noticia con noticias relacionadas
UC_VerDetalle --> UC_VerRelacionadas

@enduml
